{
  "compilerOptions": {
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "lib": ["es5", "es6", "dom", "es2018"],
    "moduleResolution": "node",
    "target": "es2018",
    "paths": {
      "@services/*": ["./services/*"],
      "@app/*": ["./*"],
      "@shared/*": ["./shared/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
